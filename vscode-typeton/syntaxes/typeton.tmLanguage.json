{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Typeton",
    "scopeName": "source.typeton",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#function-declaration"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#math-functions"
        },
        {
            "include": "#motion-commands"
        },
        {
            "include": "#encoder-methods"
        },
        {
            "include": "#input-helpers"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#runtimeConstants"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.typeton",
                    "match": "//.*$"
                }
            ]
        },
        "keywords": {
            "patterns": [
        {
            "name": "keyword.control.typeton",
            "match": "\\b(var|const|struct|return|if|else|for|while)\\b"
        }
    ]
},
        "function-declaration": {
            "patterns": [
                {
                    "name": "meta.function.typeton",
                    "begin": "\\b(const|var)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*=\\s*\\(",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.control.typeton"
                        },
                        "2": {
                            "name": "entity.name.function.typeton"
                        }
                    },
                    "end": "\\)\\s*(?::\\s*([a-zA-Z_][a-zA-Z0-9_]*))?\\s*=>",
                    "endCaptures": {
                        "1": {
                            "name": "entity.name.type.typeton"
                        }
                    },
                    "patterns": [
                        {
                            "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
                            "captures": {
                                "1": {
                                    "name": "variable.parameter.typeton"
                                },
                                "2": {
                                    "name": "entity.name.type.typeton"
                                }
                            }
                        }
                    ]
                }
            ]
        },
        "types": {
    "patterns": [
        {
            "name": "storage.type.typeton",
            "match": "\\b(Int|Int32|Int16|Int8|UInt32|UInt16|UInt8|Float32|Float|Bool|String)\\b"
        }
    ]
},
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.typeton",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.typeton",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.float.typeton",
                    "match": "\\b\\d+\\.\\d+\\b"
                },
                {
                    "name": "constant.numeric.integer.typeton",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.comparison.typeton",
                    "match": "!=|==|>=|<=|<|>"
                },
                {
                    "name": "keyword.operator.logical.typeton",
                    "match": "&&|\\|\\|"
                },
                {
                    "name": "keyword.operator.arithmetic.typeton",
                    "match": "\\+|\\-|\\*|\\/|%|="
                },
                {
                    "name": "keyword.operator.bitwise.typeton",
                    "match": "&"
                },
                {
                    "name": "keyword.operator.arrow.typeton",
                    "match": "=>"
                },
                {
                    "name": "punctuation.separator.typeton",
                    "match": ":|;|,|\\(|\\)|\\[|\\]|\\.|\\{|\\}"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.typeton",
                    "match": "\\b(print)\\b(?=\\s*\\()"
                },
                {
                    "name": "entity.name.function.call.typeton",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b(?=\\s*\\()"
                }
            ]
        },
        "math-functions": {
            "patterns": [
                {
                    "name": "support.function.math.typeton",
                    "match": "\\b(?i:(SIN|COS|TAN|ABS|SQRT|ATAN2|FLOOR|CEIL|ROUND|MIN|MAX|CLAMP))\\b(?=\\s*\\()"
                }
            ]
        },
        "motion-commands": {
            "patterns": [
                {
                    "name": "support.function.motion.typeton",
                    "match": "\\b(?i:(move_abs|move_rel|home|set_position|get_position|set_velocity|set_accel|wait_move|enable_motor|disable_motor))\\b(?=\\s*\\()"
                }
            ]
        },
        "encoder-methods": {
            "patterns": [
                {
                    "name": "support.function.encoder.typeton",
                    "match": "\\b(?i:(waitForAngle|waitForCounts|jog|moveAbsolute|setGearMaster|setGearRatio|setGearBlend))\\b(?=\\s*\\()"
                }
            ]
        },
        "input-helpers": {
            "patterns": [
                {
                    "name": "support.function.input.typeton",
                    "match": "\\b(?i:(Input\\.setType|Input\\.read|ReadInput))\\b(?=\\s*\\()"
                }
            ]
        },
        "runtimeConstants": {
            "patterns": [
                {
                    "name": "support.constant.axis.typeton",
                    "match": "\\b(?i:(?:X|Y|Z))\\b"
                },
                {
                    "name": "support.constant.encoder.typeton",
                    "match": "\\b(?i:(?:Encoder|Angle|Counts))\\b"
                },
                {
                    "name": "support.constant.input.typeton",
                    "match": "\\b(?i:(?:Input|MASTER|SLAVE|LOW|HIGH))\\b"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.typeton",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}
